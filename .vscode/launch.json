{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "delv",
      "type": "go",
      // requestはデバッグの種類を指定する attachは既存のプロセスにアタッチする
      "request": "attach",
      // modeはデバッグのモードを指定する remoteはリモートデバッグを行う
      "mode": "remote",
      "remotePath": "/app",
      "port": 2345,
      "host": "localhost",
      // cwdはデバッグ対象のプロジェクトのルートディレクトリを指定する
      "cwd": "${workspaceFolder}/backend",
      // showLogはデバッグログを表示するかどうかを指定する
      "showLog": true,
      // traceはデバッグログの詳細度を指定する verboseは最も詳細なログを出力する
      "trace": "verbose"
    }
  ]
}
